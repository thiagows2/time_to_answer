<main role="main">
  <div class="jumbotron">
    <% unless params[:term] %>
      <h3>Ãšltimas perguntas cadastradas...</h3>
    <% else %>
      <h3><%= "Resultados  para o termo \"#{params[:term]}\"..."%></h3>
    <% end %>
  </div>
</main>

<% @questions.each do |question| %>
  <%= form_with url: site_answer_path do |form| %>
    <div class="card">
      <h3 class="card-header"> 
        <span class="btn btn-primary btn-sm">
          <%= link_to question.subject.description, site_search_subject_path(question.subject_id), style:"color: white" %>
        </span>
        <%= question.description %>
      </h3>
      <div class="card-body">
        <ul>
          <% question.answers.each do |answer| %>
            <li style="list-style:none;" >
              <div class="radio">
                <label>
                  <%= radio_button_tag 'answer_id', answer.id %>
                  <%= answer.description %>
                </label>
              </div>
            </li> 
          <% end %>
          <li style="list-style:none;">
            <%= form.submit "Responder", class:"btn btn-secondary", id: "submit_#{question.id}" %>
          </li>
        </ul>
      </div>
    </div>
  <% end %>
<% end %>

<hr>
<div class="text-center"> 
    <%= paginate @questions %>
</div>